<div class="login-box-body">
  <%= form_for :widget, url: widgets_path do |f| %>
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Add Widget</h3>
      </div>
      <div class="box-body">
        <div class="row">
          <div class="col-xs-3">
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>
          <div class="col-xs-4">
            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_area :description, class: 'form-control' %>
            </div>
          </div>
          <div class="col-xs-5">
            <div class="form-group">
              <%= f.label :kind %>
              <%= f.select :kind, [:hidden, :visible], {}, {class: 'form-control'} %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "Create", class: 'btn btn-primary' %>
        </div>
      </div>
      <!-- /.box-body -->
    </div>
  <% end %>
</div>