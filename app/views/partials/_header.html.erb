<header class="main-header">
  <!-- Logo -->
  <a href="#" class="logo">
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini"><b>S</b>off</span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg"><b>Show</b>off</span>
  </a>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <% if session[:current_user].nil? %>
          <li><%= link_to nil, {:remote => true, 'data-toggle' => 'modal', 'data-target' => '#signup-modal'} do %>
              <i class="fa fa-wpforms fa-lg"></i> Sign Up
            <% end %></li>
          <li><%= link_to nil, {:remote => true, 'data-toggle' => 'modal', 'data-target' => '#login-modal'} do %>
              <i class="fa fa-sign-in fa-lg"></i> Log In
            <% end %></li>
        <% end %>
        <% if session[:current_user] %>
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <img src="<%= session[:current_user]['user']['images']['small_url'] %>" class="user-image" alt="User Image">
              <span class="hidden-xs"><%= session[:current_user]['user']['name'] %></span>
            </a>
            <ul class="dropdown-menu">
              <!-- User image -->
              <li class="user-header">
                <img src="<%= session[:current_user]['user']['images']['medium_url'] %>" class="img-circle" alt="User Image">

                <p>
                  <%= session[:current_user]['user']['name'] %>
                </p>
              </li>
              <li class="user-footer">
                <div class="pull-left">
                  <%= link_to user_path(session[:current_user]['user']['id']) do %>
                    <button class="btn btn-default btn-flat">Profile</button>
                  <% end %>
                </div>
                <div class="pull-right">
                  <%= link_to revoke_authentication_index_path, method: :delete do %>
                    <button class="btn btn-default btn-flat">Sign out</button>
                  <% end %>
                </div>
              </li>
            </ul>
          </li>
        <% end %>
        <% if session[:current_user] %>
          <li>
            <%= link_to revoke_authentication_index_path, method: :delete do %>
              <i class="fa fa-sign-out fa-lg"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>