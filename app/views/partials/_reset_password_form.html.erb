<div class="login-box-body">
  <%= form_for :user, url: reset_password_users_path do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control', id: 'reset-password-email-field' %>
    </div>
    <div class="form-group">
      <%= f.submit "Reset Password", class: 'btn btn-primary', id: 'reset-password-button', disabled: 'disabled' %>
    </div>
  <% end %>
</div>