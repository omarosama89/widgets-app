<div class="login-box-body">
  <%= form_for :user, url: users_path, method: :put do |f| %>
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control', value: @user_data['first_name'] %>
    </div>
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control', value: @user_data['last_name'] %>
    </div>
    <div class="form-group">
      <%= f.label :date_of_birt %>
      <%= f.password_field :date_of_birth, type: 'date', class: 'form-control', value: Time.at(@user_data['date_of_birth'].to_i).to_date %>
    </div>
    <div class="form-group">
      <%= f.label :image_url %>
      <%= f.text_field :image_url, class: 'form-control', value: @user_data['images']['original_url'] %>
    </div>
    <div class="form-group">
      <%= f.submit "Update", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
</div>