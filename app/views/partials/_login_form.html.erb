<div class="login-box-body">
  <%= form_for :user, url: authentication_index_path do |f| %>
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control', value: '' %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit "Log In", class: 'btn btn-primary' %>
      <%= link_to nil, {:remote => true, 'data-toggle' => 'modal', 'data-dismiss' => 'modal', 'data-target' => '#reset-password-modal'} do %>
          Forget Password?
        <% end %>
    </div>
  <% end %>
</div>