<div class="login-box-body">
  <%= form_for :widget, url: widget_path(@widget['id']), method: :put do |f| %>
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Update Widget</h3>
      </div>
      <div class="box-body">
        <div class="row">
          <div class="col-xs-3">
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control', value: @widget['name'] %>
            </div>
          </div>
          <div class="col-xs-4">
            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_area :description, class: 'form-control', value: @widget['description'] %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "update", class: 'btn btn-primary' %>
        </div>
      </div>
      <!-- /.box-body -->
    </div>
  <% end %>
</div>