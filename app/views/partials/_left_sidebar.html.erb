<aside class="main-sidebar">
  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <!-- Sidebar user panel -->
    <% if session[:current_user] %>
      <div class="user-panel">
        <div class="pull-left image">
          <img src="<%= session[:current_user]['user']['images']['small_url'] %>" class="img-circle" alt="User Image">
        </div>
        <div class="pull-left info">
          <p><%= session[:current_user]['user']['name'] %></p>
          <a href="#"><i class="fa fa-circle text-success"></i> Logged in</a>
        </div>
      </div>
    <% end %>
    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class="sidebar-menu">
      <li class="header">MAIN NAVIGATION</li>
      <li class="treeview">
        <a href="#">
          <i class="fa fa-user-circle"></i> <span>Authentication</span>
          <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
        </a>
        <ul class="treeview-menu">
          <li>
            <% if session[:current_user] %>
              <%= link_to refresh_authentication_index_path, method: :post do %>
                <i class="fa fa-refresh"></i> Refresh Token
              <% end %>
            <% else %>
              &emsp;<b><i class="fa fa-refresh"></i> Refresh Token</b>
            <% end %>
          </li>
        </ul>
      </li>
      <li class="treeview">
        <a href="#">
          <i class="fa fa-users"></i>
          <span>Users</span>
          <span class="pull-right-container">
                    <i class="fa fa-angle-left pull-right"></i>
                  </span>
        </a>
        <ul class="treeview-menu">
          <li>
            <% if session[:current_user] %>
              <%= link_to new_change_password_users_path do %>
                <i class="fa fa-exchange"></i> Change Password
              <% end %>
            <% else %>
              &emsp;<b><i class="fa fa-exchange"></i> Change Password</b>
            <% end %>
          </li>
          <li>
            <% if session[:current_user] %>
              <%= link_to my_widgets_widgets_path do %>
                <i class="fa fa-th"></i> Widgets
              <% end %>
            <% else %>
              &emsp;<b><i class="fa fa-th"></i> My Widgets</b>
            <% end %>
          </li>
        </ul>
      </li>

      <li class="treeview">
        <a href="#">
          <i class="fa fa-th"></i> <span>Widgets</span>
          <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
        </a>
        <ul class="treeview-menu">

          <li>
            <%= link_to widgets_path do %>
              <i class="fa fa-eye"></i> Visible
            <% end %>
          </li>
          <li><a href="pages/UI/icons.html"><i class="fa fa-list"></i> Index</a></li>
        </ul>
      </li>
    </ul>
  </section>
  <!-- /.sidebar -->
</aside>